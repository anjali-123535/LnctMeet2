<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutaddUrlContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/background_dialog">
    <ImageView
        android:id="@+id/img_addurl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_web_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorwhite" />
    <TextView
        android:id="@+id/txt_addurl"
        android:layout_width="0dp"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_addurl"
        app:layout_constraintStart_toEndOf="@+id/img_addurl"
        app:layout_constraintBottom_toBottomOf="@+id/img_addurl"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add URL"
        android:textColor="@color/colorwhite"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorwhite"
        android:inputType="textUri"
        android:hint="enter url"
        app:layout_constraintTop_toBottomOf="@+id/img_addurl"/>
    <TextView
        android:id="@+id/add_btntxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_url"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/cancel_btntxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_url"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="13sp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/add_btntxt"/>
</androidx.constraintlayout.widget.ConstraintLayout>